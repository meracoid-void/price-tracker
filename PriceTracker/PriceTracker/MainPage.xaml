<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PriceTracker.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Add New Account" FontSize="20" />

            <Entry x:Name="AccountNameEntry"
           Placeholder="Enter account name" />

            <Button Text="Add Account"
            Clicked="OnAddAccountClicked" />

            <Label Text="Accounts" FontSize="20" />

            <CollectionView x:Name="AccountsListView"
                SelectionMode="Single"
                SelectionChanged="OnAccountSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Name}" FontSize="18" />
                            <Label Text="{Binding Credit}" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
